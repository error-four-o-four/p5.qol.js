{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"lib": ["ES2022"],
		"target": "ES2020",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,

		/* Linting */
		"strict": true,
		"types": ["vite/client", "vitest", "vitest/jsdom"]
	},
	"exclude": ["node_modules", "*/node_modules", "dev", "examples", "lib"],
	"include": ["src", "test", "vite.*.ts", "vitest.*.ts"]
}
